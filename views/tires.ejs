<!--- Main page that lists all the tires -->

<%- include("partials/head.ejs") %>
    <%- include("partials/header.ejs") %>
        <h2>Tires List</h2>
        <table id="tires-table">
            <tr id="tires-table-header">
                <th>Brand</th>
                <th>Size</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Location</th>
                <th colspan="3"></th>
            </tr>
            <% if (tires && tires.length) { %>
                <% tires.forEach((tire)=> { %>
                    <tr>
                        <td>
                            <%= tire.brand %>
                        </td>
                        <td>
                            <%= tire.size %>
                        </td>
                        <td>
                            <%= tire.price %>
                        </td>
                        <td>
                            <%= tire.quantity %>
                        </td>
                        <td>
                            <%= tire.location %>
                        </td>

                        <!-- Edit Button -->
                        <td>
                            <form method="GET" action="/tires/edit/<%= tire._id %>" style="display: inline">
                                <button type="submit">Edit</button>
                                <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                            </form>
                        </td>


                        <!-- Delete Button -->
                        <td>
                            <form method="POST" action="/tires/delete/<%= tire.id %>" style="display: inline">
                                <button type="submit">Delete</button>
                                <input type="hidden" name="_csrf" value="<%= _csrf %>" />
                            </form>
                        </td>
                    </tr>
                    <% }) %>
                        <% } %>
        </table>

        <!-- Buttons for adding a new item and navigating home -->
        <a href="/tires/new"><button type="button">Add Tire</button></a>
        <a href="/"><button type="button">Home Page</button></a>
        <%- include("partials/footer.ejs") %>